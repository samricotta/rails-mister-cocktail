
  <div class="container">
    <h1><%= @cocktail.name %><%= link_to '(x)', cocktail_path, method: :delete %></h1>
  <div class="padded">
    <%= link_to "Create a new dose", cocktail_path(@cocktail), class: "btn mybtn"%>

    <%= link_to "Back to cocktails", cocktails_path, class: "btn mybtn"%>
    </div>
    <div class="centerbox">
    <div class="list"
    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to '(x)', dose_path(dose), method: :delete %>
     </li>
    </ul>
    <% end %>
    </div>
    </div>
</div>
